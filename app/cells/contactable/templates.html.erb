<script type="text/template" id="address-view-template">
{{ if (typeof(line1) != "undefined") { }}
    <div class="contact-details-div">
            
            <button class="model-delete-button btn btn-danger btn-xs pull-right">
                <i class="glyphicon glyphicon-trash"></i>
            </button>
            <button class="model-edit-button btn btn-primary btn-xs pull-right">
                <i class="glyphicon glyphicon-pencil"></i>
            </button>
            {{= isdefault ? '<div class="default-label pull-right"><span class="glyphicon glyphicon-ok"></span> <%= t "primary-email" %></div>' : ''}}
            <small>
                <dl class="dl-horizontal-small">
                    <dt>
                        <%= t "line1" %>
                    </dt>
                    <dd>
                        {{= line1 ? line1 : "&nbsp;" }}
                    </dd>
                    {{ if (line2) { }}                    
                        <dt>
                            <%= t "line2" %>
                        </dt>
                        <dd>
                            {{= line2 ? line2 : "&nbsp;" }}
                        </dd>
                    {{ } }}    
                    {{ if (line3) { }}
                        <dt>
                            <%= t "line3" %>
                        </dt>
                        <dd>
                            {{= line3 ? line3 : "&nbsp;" }}
                        </dd>
                    {{ } }}
                    <dt>
                        <%= t "city" %>
                    </dt>
                    <dd>
                        {{= city ? city : "&nbsp;" }}
                    </dd>
                    <dt>
                        <%= t "state" %>
                    </dt>
                    <dd>
                        {{= state ? state : "&nbsp;" }}
                    </dd>
                    <dt>
                        <%= t "post-code" %>
                    </dt>
                    <dd>
                        {{= postcode ? postcode : "&nbsp;" }}
                    </dd>
                    <dt>
                        <%= t "country" %>
                    </dt>
                    <dd>
                        {{= country ? country : "&nbsp;" }}
                    </dd>
                </dl> 
            </small>
        
    </div>
{{ } }}
</script>

