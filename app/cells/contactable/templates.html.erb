<script type="text/template" id="phone-view-template">
{{ if (typeof(number) != "undefined") { }}
    <div class="contact-details-div row boffset10">
        <div class="col-xs-9" style="font-size: 85%;">
            {{= number ? "<a href='tel:" + number + "'>" + number + "</a>&nbsp;" : "" }}
            {{= phone_type_name ? '(' + phone_type_name + ')&nbsp;' : "" }}
            {{= isdefault ? '<span class="default-label"><i class="glyphicon glyphicon-ok"></i> <%= t "primary-email" %></span>' : ''}}
            {{ if (!(typeof label == undefined) && label != null) { }}
               <br><span class="badge" style="font-size: smaller;">{{= label }}</span>
            {{ } }}
        </div>
        <div class="col-xs-3 text-right">
            <button class="model-edit-button btn btn-primary btn-xs">
                <i class="glyphicon glyphicon-pencil"></i>
            </button>
            <button class="model-delete-button btn btn-danger btn-xs">
                <i class="glyphicon glyphicon-trash"></i>
            </button>
        </div>
    </div>
{{ } }}
</script>

